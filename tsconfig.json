{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@github-manager/*": ["main/typescript/*"]
    }
  },
  "include": [
    "src/main/typescript/**/*.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "build/**/*"
  ]
}

